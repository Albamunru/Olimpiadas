<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/boladelmundo"
    tools:context=".MainActivityCulturas">

    <TextView
        android:id="@+id/textView"
        android:layout_width="366dp"
        android:layout_height="125dp"
        android:fontFamily="@font/anton"
        android:gravity="bottom"
        android:text="@string/culture_title"
        android:textAlignment="center"
        android:textColor="#F5CDB363"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="399dp"
        android:layout_height="530dp"
        android:background="@drawable/stylo_border_cultures"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="wrap_content"
            android:layout_height="359dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:listitem="@layout/recycler_view_item" />

        <Space
            android:layout_width="336dp"
            android:layout_height="53dp" />

        <TextView
            android:id="@+id/tvFrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fraseCultures"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>